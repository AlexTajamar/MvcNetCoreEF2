@model List<Departamento>

<div class="container text-center">
    <h2>Lista de Departamentos</h2>
    <table class="table table-dark table-bordered mt-3">
        <thead>
            <tr>
                <th>DEPT</th>
                <th>Loc</th>
                <th>Nombre</th>
             
            </tr>
        </thead>
        <tbody>
            @foreach(Departamento d in Model)
            {
                <tr>
                    <td>@d.Dept</td>
                    <td>@d.Localizacion</td>
                    <td>@d.Nombre</td>
                    <td>
                        <a asp-action="Details" asp-route-dept="@d.Dept" class="btn btn-primary">Detalles</a>
                        <a asp-action="Edit" asp-route-dept="@d.Dept" class="btn btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-dept="@d.Dept" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" asp-controller="Departamento" asp-action="Create">Añadir DEPT</a>
</div>